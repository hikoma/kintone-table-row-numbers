{
  "manifest_version": 2,
  "name": "kintone table row numbers",
  "version": "0.0.0",
  "description": "This extension adds row numbers to table fields.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.cybozu.com/k/*/show",
        "https://*.cybozu.com/k/*/show?*",
        "https://*.cybozu.com/k/*/edit",
        "https://*.cybozu.com/k/*/edit?*",
        "https://*.cybozu-dev.com/k/*/show",
        "https://*.cybozu-dev.com/k/*/show?*",
        "https://*.cybozu-dev.com/k/*/edit",
        "https://*.cybozu-dev.com/k/*/edit?*"
      ],
      "css": ["main.css"],
      "run_at": "document_start"
    }
  ]
}
